/* pages/showlist/showlist.wxss */
@import "../../icon/iconfont.wxss";
.top {
  width: 750rpx;
  background-color: rgba(0, 0, 0, 0.5);
}

.album {
  width: 100%;
  padding: 17px 16px 0 16px;
  overflow: hidden;
}

.album-left {
  float: left;
  overflow: hidden;
}

image {
  width: 125px;
  height: 125px;
}

.album-right {
  float: left;
  margin-left: 16px;
  margin-top: 20px;
}

.album-right text {
  color: white;
  font-size: 16px;
  display: block;
  margin-bottom: 10px;
}

.desc {
  word-break: break-all;
}

.btn {
  width: 50%;
  border-radius: 23px;
  font-size:16px;
}

.btn-view {
  padding: 10px 0px;
}

.ul {
  padding-left: 0.7143rem;
}

.li {
  width: 100%;
  height: 4.0714rem;
  border-bottom: 1px solid #e5e5e5;
  position: relative;
  display: flex;
  line-height: 4.0714rem;
}

.li-left {
  padding: 0 0.5rem;
  height: 1.0714rem;
  line-height: 1.0714rem;
  border-radius: 0.5rem;
  position: absolute;
  top: 50%;
  left: 0;
  margin-top: -.5357rem;
  text-align: center;
  font-size: 0.7143rem;
  color: #999;
  display: inline-block;
}

.li-center {
  width: 100%;
  padding-right: 2.657rem;
  display: table-cell;
  vertical-align: middle;
  padding-left: 2.0674rem;
  cursor: pointer;
  font-size:16px;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.li-play {
  position: absolute;
  top: 0;
  right: 0;
  width: 2.5rem;
  height: 100%;
  cursor: pointer;
  text-align: center;
}

.li-img {
  font-size: 20px;
  color: #999;
  display: inline-block;
}
