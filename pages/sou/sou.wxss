/* pages/sou/sou.wxss */
@import "../../icon/iconfont.wxss";

.main {
  background-color: #f4f4f4;
  padding: 10px;
}

.input-sou {
  height: 20px;
  line-height: 20px;
  width: 100%;
  color: rgba(0, 0, 0, 0.3);
  border: none;
  font-size: 14px;
  background-color: #fff;
}

.btn {
  margin-top:10px;
  padding-right: 10px;
  padding-left: 10px;
  font-size: 14px;
  height: 36px;
  line-height: 36px;
}
.ul {
  padding-left: 0.7143rem;
}

.li {
  width: 100%;
  height: 4.0714rem;
  border-bottom: 1px solid #e5e5e5;
  position: relative;
  display: flex;
  line-height: 4.0714rem;
}

.li-left {
  padding: 0 0.5rem;
  height: 1.0714rem;
  line-height: 1.0714rem;
  border-radius: 0.5rem;
  position: absolute;
  top: 50%;
  left: 0;
  margin-top: -.5357rem;
  text-align: center;
  font-size: 0.7143rem;
  color: #999;
  display: inline-block;
}

.li-center {
  width: 100%;
  padding-right: 2.657rem;
  display: table-cell;
  vertical-align: middle;
  padding-left: 2.0674rem;
  cursor: pointer;
  font-size:16px;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.li-play {
  position: absolute;
  top: 0;
  right: 0;
  width: 2.5rem;
  height: 100%;
  cursor: pointer;
  text-align: center;
}

.li-img {
  font-size: 20px;
  color: #999;
  display: inline-block;
}
